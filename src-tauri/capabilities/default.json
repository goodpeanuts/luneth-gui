{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window (explicit fs write permission for common user paths)",
  "windows": ["main"],
  "permissions": [
  "core:default",
  "opener:default",
  "dialog:allow-open",
  "dialog:allow-save",
  "log:default",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$APPDATA/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$APPLOCALDATA/**" }
      ]
    },
    "core:path:default",
    "core:event:default"
  ]
}
